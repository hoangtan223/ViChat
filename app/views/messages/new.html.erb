<%= form_for @message do |f| %>
	<%= f.hidden_field :sender_id, class: 'form-control', value: current_user.id %>
<div class="form-group">
	<%= f.label :recepient_id, class: 'form-control-label' %>
	<%= f.collection_select :recepient_id, @users, :id, :name, {:prompt => 'select recepient ...'},{:class => 'form-control'} %>
</div> 
<div class="form-group">
	<%= f.label :body, class: 'form-control-label' %>
	<%= f.text_area :body, class: 'form-control' %>
</div> 
<%= f.submit 'Send', class: 'btn btn-primary' %>
<% end %>