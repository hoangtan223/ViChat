<!DOCTYPE html>
<html>
<head>
	<title>Vichat</title>
	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
	<!--<% if current_user %>
	<div class="alert alert-info">
		Welcome, <%= current_user.name %>
	</div>
	<% end %>-->
	<nav class="navbar navbar-dark bg-inverse navbar-static-top">
		<a href="/" class="navbar-brand">ViChat</a>
		<ul class="nav navbar-nav">
			<% unless logged_in? %>
			<li class="nav-item">
				<%= link_to 'Log In', login_path, class: 'nav-link'%>
			</li>
			<li class="nav-item">
				<%= link_to 'Sign Up', new_user_path, class: 'nav-link'%>
			</li>
			<% else %>
			<li class="nav-item">
				<%= link_to current_user.name, users_path, class: 'nav-link' %>
			</li>
			<li class="nav-item">
				<%= link_to 'Log Out', logout_path, method: 'delete', class: 'nav-link'%>
			</li>
			<li class="nav-item">
			<%= link_to 'new message', new_message_path, class: 'nav-link' %>
			</li>
			<li class="nav-item">
			<%= link_to 'Sent messages', sent_messages_path, class: 'nav-link' %>
			</li>
			<li class="nav-item">
			<%= link_to 'Inbox', inbox_path, class: 'nav-link' %>
			</li>
			<% end %>
		</ul>
	</nav>
	<% if flash.any? %>
	<%= flash_messages %>
	<% end %>
	<div class="container">
		<%= yield %>
	</div>
</body>
</html>
