		<a href="/" class="navbar-brand">ViChat</a>
		<ul class="nav navbar-nav">
			
		</ul>
	</nav>
	<% if flash.any? %>
		<% flash.each do |key, value| %>
		<div class="alert <%= flash_class_name(key) %>">
